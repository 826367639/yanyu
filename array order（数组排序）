$sort = array(
   'direction' => 'SORT_ASC', //排序顺序标志 SORT_DESC 降序；SORT_ASC 升序  
   'field'     => 'extattr',       //排序字段  
);
$arrSort = array();
foreach($users AS $uniqid => $row){
   foreach($row AS $key=>$value){
      $arrSort[$key][$uniqid] = $value;
   }
}
if($sort['direction']){
   array_multisort($arrSort[$sort['field']], constant($sort['direction']), $users);
}
$ds = $users;
